{
  "name": "inventory-manager-backend",
  "version": "1.0.0",
  "main": "dist/src/app.js",
  "author": "martin",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/app.js",
    "start:dev": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && node dist/src/app.js",
    "build": "rm -rf dist && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "preserve": "yarn run build",
    "serve": "concurrently \"tsc --watch\" \"nodemon ./dist/src/app.js\"",
    "prestart": "yarn run build",
    "db:migrate": "sequelize-cli db:migrate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write --ignore-path .gitignore ."
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "2.8.5",
    "date-fns": "^2.25.0",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "mariadb": "^2.5.5",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4",
    "vhost": "^3.0.2",
    "umzug": "^3.1.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.4",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.3",
    "@types/umzug": "^2.3.3",
    "@types/node": "^16.11.6",
    "@types/vhost": "^3.0.4",
    "concurrently": "^6.3.0",
    "mysql2": "2.3.3",
    "nodemon": "^2.0.14",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^10.4.0",
    "tsc-alias": "1.6.9"
  },
  "engines": {
    "npm": "8.5.0",
    "node": "16.14.2"
  }
}
